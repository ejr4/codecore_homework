
<div class="flex-box flex-wrap">
 
  
  
      <div class="card-deck mt-4" style=" margin-left: 15px" >
        
  <% @posts.each do |post| %>
          <div class="card-col-4" >
          <div class="card" style="margin-bottom: 15px; width: 33rem"> 
              <h3 class="card-title text-truncate"> 
                <%= link_to post.title, post_path(post) %> 
              </h3>
              <br/>
              <h4 class="card-subtitle text-muted text-truncate">
                <%= post.body %>
              </h4>
              </br>
              <small>
                Posted <%= time_ago_in_words(post.created_at) %> ago
              </small>
          </div>    
          </div> 
        
  <% end %>
      </div> 
  
</div>   
  
 




